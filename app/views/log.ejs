<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Food Entry - Calorie Diary</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <%- include('partials/navbar') %>

        <div class="container mt-4">
            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>Error: <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>

                    <% if (success) { %>
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <%= success %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <% } %>

                            <!-- Page Header -->
                            <div class="row mb-4">
                                <div class="col">
                                    <h1 class="display-6 mb-0"><i class="fas fa-plus-circle me-2 text-success"></i>Add
                                        Food Entry</h1>
                                    <p class="text-muted">Log your meals and track your daily calories</p>
                                </div>
                            </div>

                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <div class="card shadow">
                                        <div class="card-body">
                                            <form id="logForm" onsubmit="submitEntry(event)">
                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <label for="date" class="form-label">
                                                            <i class="fas fa-calendar me-1"></i>Date *
                                                        </label>
                                                        <input type="date" class="form-control" id="date" name="date"
                                                            required>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label for="time" class="form-label">
                                                            <i class="fas fa-clock me-1"></i>Time
                                                        </label>
                                                        <input type="time" class="form-control" id="time" name="time">
                                                    </div>
                                                </div>

                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <label for="mealType" class="form-label">
                                                            <i class="fas fa-utensils me-1"></i>Meal Type *
                                                        </label>
                                                        <select class="form-select" id="mealType" name="mealType"
                                                            required>
                                                            <option value="">Choose meal type...</option>
                                                            <option value="Breakfast">ü•ê Breakfast</option>
                                                            <option value="Lunch">üçΩÔ∏è Lunch</option>
                                                            <option value="Dinner">üçñ Dinner</option>
                                                            <option value="Snack">üçø Snack</option>
                                                            <option value="Drink">ü•§ Drink</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label for="calories" class="form-label">
                                                            <i class="fas fa-fire me-1"></i>Calories *
                                                        </label>
                                                        <div class="input-group">
                                                            <input type="number" class="form-control" id="calories"
                                                                name="calories" min="0" max="5000" step="1" required>
                                                            <span class="input-group-text">cal</span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="description" class="form-label">
                                                        <i class="fas fa-sticky-note me-1"></i>Food Description *
                                                    </label>
                                                    <input type="text" class="form-control" id="description"
                                                        name="description"
                                                        placeholder="e.g., Chicken breast with rice and vegetables"
                                                        maxlength="200" required>
                                                    <div class="form-text">Describe what you ate (max 200 characters)
                                                    </div>
                                                </div>

                                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                                    <button type="button" class="btn btn-outline-secondary me-md-2"
                                                        onclick="clearForm()">
                                                        <i class="fas fa-eraser me-1"></i>Clear
                                                    </button>
                                                    <button type="submit" class="btn btn-success" id="submitBtn">
                                                        <i class="fas fa-plus me-1"></i>Add Entry
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                    <!-- Quick Presets -->
                                    <div class="card mt-4">
                                        <div class="card-header">
                                            <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Presets</h5>
                                        </div>
                                        <div class="card-body">
                                            <p class="text-muted small">Click to fill the form with common foods:</p>
                                            <div class="row">
                                                <div class="col-md-6 mb-2">
                                                    <button class="btn btn-outline-info btn-sm w-100"
                                                        onclick="usePreset('Banana', 105)">
                                                        üçå Banana (105 cal)
                                                    </button>
                                                </div>
                                                <div class="col-md-6 mb-2">
                                                    <button class="btn btn-outline-info btn-sm w-100"
                                                        onclick="usePreset('Apple', 80)">
                                                        üçé Apple (80 cal)
                                                    </button>
                                                </div>
                                                <div class="col-md-6 mb-2">
                                                    <button class="btn btn-outline-info btn-sm w-100"
                                                        onclick="usePreset('Greek Yogurt', 130)">
                                                        ü•õ Greek Yogurt (130 cal)
                                                    </button>
                                                </div>
                                                <div class="col-md-6 mb-2">
                                                    <button class="btn btn-outline-info btn-sm w-100"
                                                        onclick="usePreset('Coffee (black)', 5)">
                                                        ‚òï Black Coffee (5 cal)
                                                    </button>
                                                </div>
                                                <div class="col-md-6 mb-2">
                                                    <button class="btn btn-outline-info btn-sm w-100"
                                                        onclick="usePreset('Chicken breast (100g)', 165)">
                                                        üçó Chicken Breast (165 cal)
                                                    </button>
                                                </div>
                                                <div class="col-md-6 mb-2">
                                                    <button class="btn btn-outline-info btn-sm w-100"
                                                        onclick="usePreset('Rice (1 cup cooked)', 205)">
                                                        üçö Rice 1 cup (205 cal)
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Recent Entries for Reference -->
                                    <div class="card mt-4">
                                        <div class="card-header">
                                            <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Entries</h5>
                                        </div>
                                        <div class="card-body">
                                            <div id="recentEntries">
                                                <div class="text-center text-muted">
                                                    <i class="fas fa-spinner fa-spin"></i> Loading recent entries...
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Set today's date and current time by default
            document.getElementById('date').value = new Date().toISOString().split('T')[0];
            document.getElementById('time').value = new Date().toTimeString().split(' ')[0].substring(0, 5);

            function submitEntry(event) {
                event.preventDefault();

                const submitBtn = document.getElementById('submitBtn');
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Adding...';
                submitBtn.disabled = true;

                const formData = new FormData(document.getElementById('logForm'));
                const data = Object.fromEntries(formData.entries());

                fetch('/api/log', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Show success message
                            showAlert('success', 'Food entry added successfully!');

                            // Clear form
                            document.getElementById('logForm').reset();

                            // Reset date and time to current
                            document.getElementById('date').value = new Date().toISOString().split('T')[0];
                            document.getElementById('time').value = new Date().toTimeString().split(' ')[0].substring(0, 5);

                            // Reload recent entries
                            loadRecentEntries();
                        } else {
                            showAlert('danger', 'Error: ' + data.error);
                        }
                    })
                    .catch(error => {
                        showAlert('danger', 'Error: ' + error.message);
                    })
                    .finally(() => {
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                    });
            }

            function clearForm() {
                document.getElementById('logForm').reset();
                document.getElementById('date').value = new Date().toISOString().split('T')[0];
                document.getElementById('time').value = new Date().toTimeString().split(' ')[0].substring(0, 5);
            }

            function usePreset(description, calories) {
                document.getElementById('description').value = description;
                document.getElementById('calories').value = calories;

                // Auto-select meal type based on time
                const hour = new Date().getHours();
                let mealType = 'Snack';
                if (hour >= 5 && hour < 11) mealType = 'Breakfast';
                else if (hour >= 11 && hour < 16) mealType = 'Lunch';
                else if (hour >= 16 && hour < 22) mealType = 'Dinner';

                document.getElementById('mealType').value = mealType;
            }

            function showAlert(type, message) {
                const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;

                const existingAlert = document.querySelector('.alert');
                if (existingAlert) {
                    existingAlert.remove();
                }

                document.querySelector('.container').insertAdjacentHTML('afterbegin', alertHtml);
            }

            function loadRecentEntries() {
                fetch('/api/log?limit=5')
                    .then(response => response.json())
                    .then(data => {
                        const container = document.getElementById('recentEntries');
                        if (data.success && data.data.length > 0) {
                            container.innerHTML = data.data.map(entry => `
                            <div class="border-bottom pb-2 mb-2">
                                <div class="d-flex justify-content-between">
                                    <strong>${entry.description}</strong>
                                    <span class="text-success">${entry.calories} cal</span>
                                </div>
                                <small class="text-muted">
                                    ${entry.mealType} ‚Ä¢ ${entry.date} ${entry.time ? '‚Ä¢ ' + entry.time : ''}
                                </small>
                            </div>
                        `).join('');
                        } else {
                            container.innerHTML = '<p class="text-muted text-center">No recent entries</p>';
                        }
                    })
                    .catch(() => {
                        document.getElementById('recentEntries').innerHTML =
                            '<p class="text-muted text-center">Failed to load recent entries</p>';
                    });
            }

            // Load recent entries on page load
            loadRecentEntries();
        </script>
</body>

</html>