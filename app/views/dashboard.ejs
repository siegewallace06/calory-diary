<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calorie Diary - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .card-stat {
            transition: transform 0.2s;
        }

        .card-stat:hover {
            transform: translateY(-2px);
        }

        .status-under {
            background-color: #d4edda !important;
            color: #155724 !important;
        }

        .status-over {
            background-color: #f8d7da !important;
            color: #721c24 !important;
        }

        .nav-link.active {
            background-color: #0d6efd !important;
        }
    </style>
</head>

<body class="bg-light">
    <%- include('partials/navbar') %>

        <div class="container mt-4">
            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>Error: <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>

                    <!-- Page Header -->
                    <div class="row mb-4">
                        <div class="col">
                            <h1 class="display-6 mb-0"><i class="fas fa-chart-pie me-2 text-primary"></i>Dashboard</h1>
                            <p class="text-muted">Your daily calorie tracking overview</p>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-outline-primary" onclick="refreshData()">
                                <i class="fas fa-refresh me-1"></i>Refresh
                            </button>
                        </div>
                    </div>

                    <% if (dashboard) { %>
                        <!-- Today's Summary Cards -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card card-stat h-100">
                                    <div class="card-body text-center">
                                        <div class="d-flex justify-content-center mb-2">
                                            <i class="fas fa-calendar-day fa-2x text-primary"></i>
                                        </div>
                                        <h5 class="card-title">Today</h5>
                                        <p class="card-text h6 text-muted">
                                            <%= new Date(dashboard.today.date).toLocaleDateString() %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card card-stat h-100">
                                    <div class="card-body text-center">
                                        <div class="d-flex justify-content-center mb-2">
                                            <i class="fas fa-utensils fa-2x text-success"></i>
                                        </div>
                                        <h5 class="card-title">Consumed</h5>
                                        <p class="card-text h4 text-success mb-0">
                                            <%= dashboard.today.totalIn %>
                                        </p>
                                        <small class="text-muted">calories</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card card-stat h-100">
                                    <div class="card-body text-center">
                                        <div class="d-flex justify-content-center mb-2">
                                            <i class="fas fa-target fa-2x text-info"></i>
                                        </div>
                                        <h5 class="card-title">Goal</h5>
                                        <p class="card-text h4 text-info mb-0">
                                            <%= dashboard.today.maxLimit %>
                                        </p>
                                        <small class="text-muted">calories</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card card-stat h-100">
                                    <div class="card-body text-center">
                                        <div class="d-flex justify-content-center mb-2">
                                            <i class="fas fa-chart-line fa-2x 
                                <%= dashboard.today.status.includes('Under') ? 'text-success' : 'text-danger' %>"></i>
                                        </div>
                                        <h5 class="card-title">Status</h5>
                                        <p class="card-text small 
                            <%= dashboard.today.status.includes('Under') ? 'status-under' : 'status-over' %> 
                            rounded p-2 mb-0">
                                            <%= dashboard.today.status %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Progress Bar -->
                        <div class="row mb-4">
                            <div class="col">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title"><i class="fas fa-chart-bar me-2"></i>Daily Progress</h5>
                                        <% const consumed=parseFloat(dashboard.today.totalIn) || 0; const
                                            goal=parseFloat(dashboard.today.maxLimit) || 1; const
                                            percentage=Math.min((consumed / goal) * 100, 100); const isOver=consumed>
                                            goal;
                                            %>
                                            <div class="progress mb-2" style="height: 25px;">
                                                <div class="progress-bar 
                                <%= isOver ? 'bg-danger' : 'bg-success' %>" role="progressbar"
                                                    style="width: <%= percentage %>%" aria-valuenow="<%= percentage %>"
                                                    aria-valuemin="0" aria-valuemax="100">
                                                    <%= Math.round(percentage) %>%
                                                </div>
                                            </div>
                                            <div class="row text-center">
                                                <div class="col">
                                                    <small class="text-muted">
                                                        <%= consumed %> / <%= goal %> calories
                                                                <% if (isOver) { %>
                                                                    (<%= Math.round(consumed - goal) %> over)
                                                                        <% } else { %>
                                                                            (<%= Math.round(goal - consumed) %>
                                                                                remaining)
                                                                                <% } %>
                                                    </small>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Personal Metrics -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0"><i class="fas fa-user me-2"></i>Personal Metrics</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-6">
                                                <p><strong>Gender:</strong>
                                                    <%= dashboard.personal.gender %>
                                                </p>
                                                <p><strong>Weight:</strong>
                                                    <%= dashboard.personal.weight %> kg
                                                </p>
                                                <p><strong>Height:</strong>
                                                    <%= dashboard.personal.height %> cm
                                                </p>
                                            </div>
                                            <div class="col-6">
                                                <p><strong>Age:</strong>
                                                    <%= dashboard.personal.age %> years
                                                </p>
                                                <p><strong>Activity:</strong>
                                                    <%= dashboard.personal.activityLevel %>
                                                </p>
                                                <p><strong>Goal:</strong>
                                                    <%= dashboard.personal.goalOffset %>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="mt-2">
                                            <p class="mb-0"><strong>Daily Goal:</strong>
                                                <span class="badge bg-primary fs-6">
                                                    <%= dashboard.personal.dailyGoal %> calories
                                                </span>
                                            </p>
                                        </div>
                                        <div class="mt-3">
                                            <a href="/settings" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit me-1"></i>Update Metrics
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <!-- Recent Entries -->
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Recent Entries</h5>
                                            <a href="/log" class="btn btn-sm btn-success">
                                                <i class="fas fa-plus me-1"></i>Add Entry
                                            </a>
                                        </div>
                                        <div class="card-body">
                                            <% if (recentEntries && recentEntries.length> 0) { %>
                                                <div class="list-group list-group-flush">
                                                    <% recentEntries.forEach(entry=> { %>
                                                        <div class="list-group-item px-0">
                                                            <div class="d-flex w-100 justify-content-between">
                                                                <h6 class="mb-1">
                                                                    <%= entry.description %>
                                                                </h6>
                                                                <small class="text-success"><strong>
                                                                        <%= entry.calories %> cal
                                                                    </strong></small>
                                                            </div>
                                                            <p class="mb-1">
                                                                <span class="badge bg-secondary me-2">
                                                                    <%= entry.mealType %>
                                                                </span>
                                                            </p>
                                                            <small class="text-muted">
                                                                <i class="fas fa-calendar me-1"></i>
                                                                <%= entry.date %>
                                                                    <% if (entry.time) { %>
                                                                        <i class="fas fa-clock ms-2 me-1"></i>
                                                                        <%= entry.time %>
                                                                            <% } %>
                                                            </small>
                                                        </div>
                                                        <% }) %>
                                                </div>
                                                <div class="mt-3 text-center">
                                                    <a href="/log" class="btn btn-outline-primary btn-sm">View All
                                                        Entries</a>
                                                </div>
                                                <% } else { %>
                                                    <div class="text-center text-muted py-4">
                                                        <i class="fas fa-utensils fa-3x mb-3 opacity-25"></i>
                                                        <p>No food entries yet</p>
                                                        <a href="/log" class="btn btn-primary">Add Your First Entry</a>
                                                    </div>
                                                    <% } %>
                                        </div>
                                    </div>
                                </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="row">
                            <div class="col">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                                        <div class="row">
                                            <div class="col-md-3 mb-2">
                                                <a href="/log" class="btn btn-success w-100">
                                                    <i class="fas fa-plus me-2"></i>Add Food Entry
                                                </a>
                                            </div>
                                            <div class="col-md-3 mb-2">
                                                <a href="/summary" class="btn btn-info w-100">
                                                    <i class="fas fa-chart-bar me-2"></i>View Summary
                                                </a>
                                            </div>
                                            <div class="col-md-3 mb-2">
                                                <a href="/settings" class="btn btn-warning w-100">
                                                    <i class="fas fa-cog me-2"></i>Settings
                                                </a>
                                            </div>
                                            <div class="col-md-3 mb-2">
                                                <button onclick="refreshData()" class="btn btn-outline-secondary w-100">
                                                    <i class="fas fa-refresh me-2"></i>Refresh Data
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            function refreshData() {
                const btn = event.target.closest('button');
                const originalText = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Refreshing...';
                btn.disabled = true;

                fetch('/api/refresh', { method: 'POST' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            alert('Refresh failed: ' + data.error);
                        }
                    })
                    .catch(error => {
                        alert('Refresh failed: ' + error.message);
                    })
                    .finally(() => {
                        btn.innerHTML = originalText;
                        btn.disabled = false;
                    });
            }

            // Auto-refresh every 5 minutes
            setInterval(() => {
                location.reload();
            }, 300000);
        </script>
</body>

</html>